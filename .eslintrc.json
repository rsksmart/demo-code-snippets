{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
      "import/extensions": "off",
      "no-console": "off",
      "prettier/prettier": ["error"],
      "import/no-extraneous-dependencies": "off"
    },
    "globals": {
      "hre": "readonly",
      "ethers": "readonly",
      "describe":"readonly",
      "before":"readonly",
      "it": "readonly",
      "task": "readonly"
    },
    "root": true
}
